{
  "compilerOptions": {
    "outDir": "dist", // 输出目录
    "target": "es2016",    // 目标语法
    "sourceMap": true, // 采用sourcemap
    "module": "esnext", // 模块格式
    "moduleResolution": "node", // 模块解析方式
    "strict": false, // 严格模式
    "resolveJsonModule": true, // 解析JSON模块
    "esModuleInterop": true, // 允许通过es6的语法转commonjs模块
    "jsx": "preserve", // jsx不转译
    "lib": ["esnext", "dom"], // 支持类库esnext dom
    "baseUrl": ".",
    "paths": {
      "@vue/*": ["packages/*/src"]
    }
  }
}
